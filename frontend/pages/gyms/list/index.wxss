.gym-list-container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.add-button {
  background-color: #1976d2;
  color: white;
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.add-button-text {
  color: white;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 100rpx 0;
}

.loading-text {
  font-size: 32rpx;
  color: #666;
}

.error-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 100rpx 0;
  text-align: center;
}

.error-text {
  font-size: 32rpx;
  color: #d32f2f;
  margin-bottom: 30rpx;
}

.retry-button {
  background-color: #1976d2;
  color: white;
  padding: 12rpx 32rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.empty-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 150rpx 0;
  text-align: center;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.add-first-button {
  background-color: #1976d2;
  color: white;
  padding: 12rpx 32rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.gym-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.gym-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: white;
  padding: 24rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.gym-info {
  flex: 1;
}

.gym-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.gym-address {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

.gym-actions {
  display: flex;
  gap: 16rpx;
}

.edit-button {
  background-color: #f5f5f5;
  color: #1976d2;
  padding: 10rpx 20rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
}

.edit-button-text {
  color: #1976d2;
}

.delete-button {
  background-color: #f5f5f5;
  color: #d32f2f;
  padding: 10rpx 20rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
}

.delete-button-text {
  color: #d32f2f;
}

/* 模态框样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  background-color: white;
  padding: 40rpx;
  border-radius: 12rpx;
  width: 80%;
  max-width: 500rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.modal-message {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
  text-align: center;
  line-height: 1.4;
}

.modal-buttons {
  display: flex;
  gap: 20rpx;
  justify-content: center;
}

.cancel-button {
  background-color: #f5f5f5;
  color: #666;
  padding: 12rpx 32rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.confirm-button {
  background-color: #d32f2f;
  color: white;
  padding: 12rpx 32rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}