/* 登录页面样式 */
.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 40rpx 20rpx;
}

.login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 32rpx;
  margin-bottom: 24rpx;
  background-color: #fff;
}

.app-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.slogan {
  font-size: 24rpx;
  color: #666;
}

.login-body {
  width: 100%;
  max-width: 400rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-tips {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 48rpx;
  text-align: center;
}

/* 头像选择区域 */
.avatar-section {
  width: 100%;
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 24rpx;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.avatar-container {
  display: flex;
  justify-content: center;
}

.avatar-button {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  background-color: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  margin: 0;
  border: none;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
}

.avatar-placeholder {
  position: absolute;
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  background-color: rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-placeholder-text {
  font-size: 20rpx;
  color: #999;
}

/* 昵称输入区域 */
.nickname-section {
  width: 100%;
  margin-bottom: 48rpx;
}

.nickname-input {
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  border-radius: 40rpx;
  padding: 0 32rpx;
  font-size: 24rpx;
  color: #333;
  border: 1rpx solid #e0e0e0;
}

.nickname-input::placeholder {
  color: #999;
}

/* 登录按钮 */
.login-button {
  width: 100%;
  height: 88rpx;
  font-size: 28rpx;
  font-weight: bold;
  border-radius: 44rpx;
  margin-bottom: 48rpx;
  background-color: #07C160;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-button:disabled {
  background-color: #ccc;
  color: #fff;
}

/* 登录信息 */
.login-info {
  font-size: 20rpx;
  color: #999;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  justify-content: center;
}

.privacy-link,
.terms-link {
  color: #07C160;
  text-decoration: none;
  margin: 0 4rpx;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .login-header {
    margin-bottom: 40rpx;
  }
  
  .logo {
    width: 140rpx;
    height: 140rpx;
  }
  
  .app-name {
    font-size: 32rpx;
  }
  
  .slogan {
    font-size: 20rpx;
  }
  
  .avatar-button {
    width: 140rpx;
    height: 140rpx;
    border-radius: 70rpx;
  }
  
  .avatar {
    width: 140rpx;
    height: 140rpx;
    border-radius: 70rpx;
  }
  
  .login-button {
    height: 80rpx;
    font-size: 24rpx;
  }
}
