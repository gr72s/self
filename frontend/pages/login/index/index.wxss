/* 登录页面样式 */
.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 40rpx 20rpx;
}

.login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 100rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 32rpx;
  margin-bottom: 24rpx;
  background-color: #fff;
}

.app-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.slogan {
  font-size: 24rpx;
  color: #666;
}

.login-body {
  width: 100%;
  max-width: 400rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-tips {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 48rpx;
  text-align: center;
}

.login-button {
  width: 100%;
  height: 88rpx;
  font-size: 28rpx;
  font-weight: bold;
  border-radius: 44rpx;
  margin-bottom: 48rpx;
  background-color: #07C160;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-info {
  font-size: 20rpx;
  color: #999;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  justify-content: center;
}

.privacy-link,
.terms-link {
  color: #07C160;
  text-decoration: none;
  margin: 0 4rpx;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .login-header {
    margin-bottom: 80rpx;
  }
  
  .logo {
    width: 140rpx;
    height: 140rpx;
  }
  
  .app-name {
    font-size: 32rpx;
  }
  
  .slogan {
    font-size: 20rpx;
  }
  
  .login-button {
    height: 80rpx;
    font-size: 24rpx;
  }
}
