<view class="login-container">
  <view class="login-header">
    <image src="/images/logo.png" class="logo" mode="aspectFill" />
    <text class="app-name">健身追踪</text>
    <text class="slogan">记录每一次进步</text>
  </view>
  
  <view class="login-body">
    <view class="login-tips">
      <text>登录后使用完整功能</text>
    </view>
    
    <!-- 头像选择 -->
    <view class="avatar-section">
      <text class="section-title">头像</text>
      <view class="avatar-container">
        <button 
          class="avatar-button" 
          open-type="chooseAvatar"
          bind:chooseavatar="onChooseAvatar"
        >
          <image 
            src="{{ avatarUrl }}" 
            class="avatar" 
            mode="aspectFill" 
          />
          <view class="avatar-placeholder" wx:if="!avatarUrl">
            <text class="avatar-placeholder-text">选择头像</text>
          </view>
        </button>
      </view>
    </view>
    
    <!-- 昵称输入 -->
    <view class="nickname-section">
      <text class="section-title">昵称</text>
      <input 
        type="nickname" 
        class="nickname-input" 
        placeholder="请输入昵称" 
        value="{{ nickname }}" 
        bindinput="onNicknameInput" 
      />
    </view>
    
    <button 
      class="login-button" 
      bindtap="login"
      type="primary"
      size="default"
      disabled="{{ !nickname || !avatarUrl }}"
    >
      微信登录
    </button>
    
    <view class="login-info">
      <text>登录即表示您同意</text>
      <navigator url="/pages/login/privacy/index" class="privacy-link">隐私政策</navigator>
      <text>和</text>
      <navigator url="/pages/login/terms/index" class="terms-link">用户协议</navigator>
    </view>
  </view>
</view>