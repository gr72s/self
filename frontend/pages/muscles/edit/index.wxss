.muscle-edit-container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.back-button {
  background-color: #f5f5f5;
  color: #666;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.back-button-text {
  color: #666;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 150rpx 0;
}

.loading-text {
  font-size: 32rpx;
  color: #666;
}

.error-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 150rpx 0;
  text-align: center;
}

.error-text {
  font-size: 32rpx;
  color: #d32f2f;
  margin-bottom: 30rpx;
}

.retry-button {
  background-color: #1976d2;
  color: white;
  padding: 12rpx 32rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.form-container {
  background-color: white;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.form-input {
  width: 100%;
  padding: 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #f9f9f9;
}

.form-input:focus {
  border-color: #1976d2;
  background-color: white;
}

.error-message {
  display: block;
  font-size: 24rpx;
  color: #d32f2f;
  margin-top: 8rpx;
}

.submit-button {
  width: 100%;
  background-color: #1976d2;
  color: white;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 20rpx;
}

.submit-button:disabled {
  background-color: #bdbdbd;
}

.submit-button-text {
  color: white;
}