<view class="page-container">
  <view class="container">
    <view class="profile-header">
      <view class="avatar">{{user && user.username ? user.username.charAt(0).toUpperCase() : 'U'}}</view>
      <text class="username">{{user && user.username ? user.username : '未登录'}}</text>
    </view>

    <view class="menu-list">
      <view class="menu-item" bindtap="navigateToSettings">
        <text class="menu-text">设置</text>
        <text class="menu-arrow">></text>
      </view>

      <view class="menu-item" bindtap="handleLogout">
        <text class="menu-text">退出登录</text>
        <text class="menu-arrow">></text>
      </view>
    </view>
  </view>
</view>
