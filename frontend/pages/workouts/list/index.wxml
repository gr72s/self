<view class="workout-list-page">
  <!-- 页面头部 -->
  <view class="page-header">
    <text class="page-title">Workouts</text>
    <view class="header-actions">
      <button class="primary-button" bindtap="navigateToCreate">
        + Create
      </button>
    </view>
  </view>

  <!-- 训练列表 -->
  <view class="list-container">
    <block wx:if="{{loading}}">
      <view class="loading">
        <text>Loading...</text>
      </view>
    </block>
    <block wx:elif="{{workouts.length === 0}}">
      <view class="empty">
        <text class="empty-text">No workouts yet</text>
        <button class="primary-button" bindtap="navigateToCreate">
          Create First Workout
        </button>
      </view>
    </block>
    <block wx:else>
      <view class="workout-items">
        <view wx:for="{{workouts}}" wx:key="{{item.id}}" class="workout-item">
          <view class="workout-info">
            <view class="workout-header">
              <text class="workout-name">{{item.routine && item.routine.name ? item.routine.name : 'Unnamed Workout'}}</text>
              <text class="workout-date">{{formatDate(item.startTime)}}</text>
            </view>
            <view class="workout-details">
              <text class="workout-time">
                {{formatTime(item.startTime)}} - {{item.endTime ? formatTime(item.endTime) : 'In Progress'}}
              </text>
              <text class="workout-gym">{{item.gym && item.gym.name ? item.gym.name : 'Unknown Gym'}}</text>
            </view>
            <view class="workout-stats" wx:if="{{item.endTime}}">
              <text class="workout-duration">{{calculateDuration(item.startTime, item.endTime)}}</text>
            </view>
          </view>
          <view class="workout-actions">
            <button class="action-button" bindtap="navigateToEdit" data-id="{{item.id}}">
              Edit
            </button>
            <button class="action-button delete" bindtap="confirmDelete" data-id="{{item.id}}">
              Delete
            </button>
          </view>
        </view>
      </view>
    </block>
  </view>
</view>