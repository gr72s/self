<view class="page-container">
  <!-- 顶部导航栏 -->
  <navbar 
    menuOpen="{{menuOpen}}" 
    bind:toggleMenu="handleMenuToggle"
  />
  
  <!-- 主内容区 -->
  <view class="main-container">
    <!-- 页面头部 -->
    <view class="page-header">
      <text class="page-title">编辑训练</text>
    </view>

    <!-- 表单 -->
    <form class="workout-form" bindsubmit="handleSubmit">
      <!-- 训练计划选择 -->
      <view class="form-section">
        <text class="section-title">计划</text>
        <view class="form-item">
          <text class="form-label">选择训练计划</text>
          <view class="select-container">
            <picker bindchange="handleRoutineChange" range="{{routines}}" range-key="name" value="{{selectedRoutineIndex}}">
              <view class="picker-view">
                {{selectedRoutine ? selectedRoutine.name : 'Select a routine'}}
              </view>
            </picker>
          </view>
        </view>
      </view>

      <!-- 健身房选择 -->
      <view class="form-section">
        <text class="section-title">健身房</text>
        <view class="form-item">
          <text class="form-label">选择健身房</text>
          <view class="select-container">
            <picker bindchange="handleGymChange" range="{{gyms}}" range-key="name" value="{{selectedGymIndex}}">
              <view class="picker-view">
                {{selectedGym ? selectedGym.name : 'Select a gym'}}
              </view>
            </picker>
          </view>
        </view>
      </view>

      <!-- 目标选择 -->
      <view class="form-section">
        <text class="section-title">目标肌群</text>
        <view class="form-item">
          <text class="form-label">选择目标肌群</text>
          <view class="targets-container">
            <view wx:for="{{targets}}" wx:key="{{item.id}}" class="target-item" bindtap="toggleTarget" data-id="{{item.id}}">
              <view class="target-checkbox {{selectedTargets.includes(item.id) ? 'checked' : ''}}">
                <text wx:if="{{selectedTargets.includes(item.id)}}" class="checkbox-icon">✓</text>
              </view>
              <text class="target-name">{{item.name}}</text>
            </view>
          </view>
        </view>
      </view>

      <!-- 备注 -->
      <view class="form-section">
        <text class="section-title">其他信息</text>
        <view class="form-item">
          <text class="form-label">备注（选填）</text>
          <textarea class="form-textarea" placeholder="填写该训练备注" value="{{note}}" bindinput="handleNoteChange"></textarea>
        </view>
      </view>

      <!-- 提交按钮 -->
      <view class="form-actions">
        <button class="cancel-button" bindtap="navigateBack">取消</button>
        <button class="submit-button" form-type="submit" wx:if="{{!submitting}}">保存训练</button>
        <button class="submit-button" disabled wx:else>保存中...</button>
      </view>
    </form>
  </view>
  
  <!-- 底部工具栏 -->
  <tabbar />
</view>