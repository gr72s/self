          </view>
        </view>
      </block>
      <block wx:else>
        <view class="table-header">
          <view class="table-header-cell">Exercise</view>
          <view class="table-header-cell">Muscles</view>
          <view class="table-header-cell">Description</view>
          <view class="table-header-cell" style="text-align: right;">Actions</view>
        </view>
        <view class="table-body">
          <view wx:for="{{exercises}}" wx:key="{{item.id}}" class="table-row">
            <view class="table-cell">
              <text class="exercise-name">{{item.name}}</text>
            </view>
            <view class="table-cell">
              <text class="exercise-muscles">{{getMusclesList(item)}}</text>
            </view>
            <view class="table-cell">
              <text class="exercise-description">{{item.description || 'No description'}}</text>
            </view>
            <view class="table-cell" style="text-align: right;">
              <view class="table-actions">
                <view class="button icon-button" bindtap="navigateToEdit" data-id="{{item.id}}">
                  <text>âœï¸</text>
