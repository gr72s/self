<view class="page-container">
  <!-- é¡¶éƒ¨å¯¼èˆªæ  -->
  <navbar 
    menuOpen="{{menuOpen}}" 
    bind:toggleMenu="handleMenuToggle"
  />
  
  <!-- ä¸»å†…å®¹åŒº -->
  <view class="main-container">
    <!-- é¡µé¢å¤´éƒ¨ -->
    <view class="section-title">
      <text>Exercises</text>
      <view class="toolbar-right">
        <view class="button icon-button" bindtap="handleRefresh">
          <text>ğŸ”„</text>
        </view>
        <view class="button primary" bindtap="navigateToCreate">
          <text class="button-text">+ Create</text>
        </view>
      </view>
    </view>

    <!-- åŠ¨ä½œåˆ—è¡¨ -->
    <view class="table">
      <block wx:if="{{loading}}">
        <view class="loading">
          <view class="loading-spinner"></view>
          <text>Loading...</text>
        </view>
      </block>
      <block wx:elif="{{exercises.length === 0}}">
        <view class="empty">
          <text class="empty-icon">ğŸ’ª</text>
          <text class="empty-text">No exercises yet</text>
