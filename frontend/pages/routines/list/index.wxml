<view class="page-container">
  <!-- é¡¶éƒ¨å¯¼èˆªæ  -->
  <navbar 
    menuOpen="{{menuOpen}}" 
    bind:toggleMenu="handleMenuToggle"
  />
  
  <!-- ä¸»å†…å®¹åŒº -->
  <view class="main-container">
    <!-- é¡µé¢å¤´éƒ¨ -->
    <view class="section-title">
      <text>Routines</text>
      <view class="toolbar-right">
        <view class="button icon-button" bindtap="handleRefresh">
          <text>ğŸ”„</text>
        </view>
        <view class="button primary" bindtap="navigateToCreate">
          <text class="button-text">+ Create</text>
        </view>
      </view>
    </view>

    <!-- è®¡åˆ’åˆ—è¡¨ -->
    <view class="table">
      <block wx:if="{{loading}}">
        <view class="loading">
          <view class="loading-spinner"></view>
          <text>Loading...</text>
        </view>
      </block>
      <block wx:elif="{{routines.length === 0}}">
        <view class="empty">
          <text class="empty-icon">ğŸ“‹</text>
          <text class="empty-text">No routines yet</text>
          <text class="empty-subtext">Create your first routine to get started</text>
          <view class="button primary" bindtap="navigateToCreate">
            <text class="button-text">Create First Routine</text>
          </view>
        </view>
      </block>
      <block wx:else>
        <view class="table-header">
          <view class="table-header-cell">Routine</view>
          <view class="table-header-cell">Exercises</view>
          <view class="table-header-cell">Targets</view>
          <view class="table-header-cell">Description</view>
          <view class="table-header-cell" style="text-align: right;">Actions</view>
        </view>
        <view class="table-body">
          <view wx:for="{{routines}}" wx:key="{{item.id}}" class="table-row">
            <view class="table-cell">
              <text class="routine-name">{{item.name}}</text>
            </view>
            <view class="table-cell">
              <text>{{item.slots && item.slots.size ? item.slots.size : 0}}</text>
            </view>
            <view class="table-cell">
              <text>{{item.targets && item.targets.size ? item.targets.size : 0}}</text>
            </view>
            <view class="table-cell">
              <text class="routine-description">{{item.description || 'No description'}}</text>
            </view>
            <view class="table-cell" style="text-align: right;">
              <view class="table-actions">
                <view class="button icon-button" bindtap="navigateToEdit" data-id="{{item.id}}">
                  <text>âœï¸</text>
                </view>
                <view class="button icon-button delete" bindtap="confirmDelete" data-id="{{item.id}}">
                  <text>ğŸ—‘ï¸</text>
                </view>
              </view>
            </view>
          </view>
        </view>
      </block>
    </view>
  </view>
</view>