<view class="sidebar" style="width: {{expanded ? '240rpx' : '80rpx'}}; opacity: {{expanded ? 1 : 0.8}};">
  <view class="sidebar-header">
    <view class="sidebar-logo" wx:if="{{expanded}}">
      <text class="logo-text">健身</text>
    </view>
  </view>
  <view class="sidebar-content">
    <view class="sidebar-section">
      <text class="sidebar-section-title" wx:if="{{expanded}}">主要功能</text>
      <view class="sidebar-item {{selectedItem === 'home' ? 'active' : ''}}" bindtap="handleItemClick" data-id="home" data-url="/pages/index/index">
        <view class="sidebar-item-icon">
          <text>🏠</text>
        </view>
        <text class="sidebar-item-text" wx:if="{{expanded}}">首页</text>
      </view>
      <view class="sidebar-item {{selectedItem === 'workouts' ? 'active' : ''}}" bindtap="handleItemClick" data-id="workouts" data-url="/pages/workouts/list/index">
        <view class="sidebar-item-icon">
          <text>🏋️</text>
        </view>
        <text class="sidebar-item-text" wx:if="{{expanded}}">训练记录</text>
      </view>
      <view class="sidebar-item {{selectedItem === 'exercises' ? 'active' : ''}}" bindtap="handleItemClick" data-id="exercises" data-url="/pages/exercises/list/index">
        <view class="sidebar-item-icon">
          <text>💪</text>
        </view>
        <text class="sidebar-item-text" wx:if="{{expanded}}">动作库</text>
      </view>
      <view class="sidebar-item {{selectedItem === 'routines' ? 'active' : ''}}" bindtap="handleItemClick" data-id="routines" data-url="/pages/routines/list/index">
        <view class="sidebar-item-icon">
          <text>📋</text>
        </view>
        <text class="sidebar-item-text" wx:if="{{expanded}}">训练计划</text>
      </view>
    </view>
    <view class="sidebar-divider" wx:if="{{expanded}}"></view>
    <view class="sidebar-section">
      <text class="sidebar-section-title" wx:if="{{expanded}}">设置</text>
      <view class="sidebar-item {{selectedItem === 'gyms' ? 'active' : ''}}" bindtap="handleItemClick" data-id="gyms" data-url="/pages/gyms/list/index">
        <view class="sidebar-item-icon">
          <text>🏟️</text>
        </view>
        <text class="sidebar-item-text" wx:if="{{expanded}}">健身房</text>
      </view>
      <view class="sidebar-item {{selectedItem === 'muscles' ? 'active' : ''}}" bindtap="handleItemClick" data-id="muscles" data-url="/pages/muscles/list/index">
        <view class="sidebar-item-icon">
          <text>💪</text>
        </view>
        <text class="sidebar-item-text" wx:if="{{expanded}}">肌肉</text>
      </view>
    </view>
  </view>
  <view class="sidebar-footer" wx:if="{{expanded}}">
    <view class="sidebar-item" bindtap="handleCollapse">
      <view class="sidebar-item-icon">
        <text>📏</text>
      </view>
      <text class="sidebar-item-text">收起</text>
    </view>
  </view>
</view>