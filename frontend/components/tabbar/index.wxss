/* 底部工具栏样式 */
.tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 49px;
  background-color: #ffffff;
  border-top: 1px solid #000000;
  display: flex;
  justify-content: space-around;
  align-items: center;
  z-index: 999;
}

.tabbar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.tabbar-text {
  font-size: 10px;
  color: #636E72;
}

/* 选中状态 */
.tabbar-item.active .tabbar-text {
  color: #FF6B35;
  font-weight: 500;
}