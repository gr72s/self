<view class="page-container">
  <!-- é¡¶éƒ¨å¯¼èˆªæ ?-->
  
  <!-- ä¸»å†…å®¹åŒº -->
  <view class="main-container">
    <!-- é¡µé¢å¤´éƒ¨ -->
    <view class="section-title">
      <text>Gyms</text>
      <view class="toolbar-right">
        <view class="button icon-button" bindtap="handleRefresh">
          <text>ğŸ”„</text>
        </view>
        <view class="button primary" bindtap="handleAddGym">
          <text class="button-text">+ Create</text>
        </view>
      </view>
    </view>

    <!-- å¥èº«æˆ¿åˆ—è¡?-->
    <view class="table">
      <block wx:if="{{loading}}">
        <view class="loading">
          <view class="loading-spinner"></view>
          <text>Loading...</text>
        </view>
      </block>
      <block wx:elif="{{error}}">
        <view class="empty">
          <text class="empty-icon">âš ï¸</text>
          <text class="empty-text">{{error}}</text>
          <view class="button secondary" bindtap="loadGyms">
            <text class="button-text">Retry</text>
          </view>
        </view>
      </block>
      <block wx:elif="{{gyms.length === 0}}">
        <view class="empty">
          <text class="empty-icon">ğŸŸï¸?</text>
          <text class="empty-text">No gyms yet</text>
          <text class="empty-subtext">Create your first gym to get started</text>
          <view class="button primary" bindtap="handleAddGym">
            <text class="button-text">Create First Gym</text>
          </view>
        </view>
      </block>
      <block wx:else>
        <view class="table-header">
          <view class="table-header-cell">Gym</view>
          <view class="table-header-cell">Address</view>
          <view class="table-header-cell" style="text-align: right;">Actions</view>
        </view>
        <view class="table-body">
          <view wx:for="{{gyms}}" wx:key="id" class="table-row">
            <view class="table-cell">
              <text class="gym-name">{{item.name}}</text>
            </view>
            <view class="table-cell">
              <text class="gym-address">{{item.address}}</text>
            </view>
            <view class="table-cell" style="text-align: right;">
              <view class="table-actions">
                <view class="button icon-button" bindtap="handleEditGym" data-id="{{item.id}}">
                  <text>âœï¸</text>
                </view>
                <view class="button icon-button delete" bindtap="handleDeleteGym" data-id="{{item.id}}">
                  <text>ğŸ—‘ï¸?</text>
                </view>
              </view>
            </view>
          </view>
        </view>
      </block>
    </view>

    <!-- åˆ é™¤ç¡®è®¤å¯¹è¯æ¡?-->
    <view wx:if="{{showDeleteConfirm}}" class="modal-overlay">
      <view class="modal-content">
        <text class="modal-title">Confirm Delete</text>
        <text class="modal-message">Are you sure you want to delete this gym?</text>
        <view class="modal-buttons">
          <view class="button secondary" bindtap="cancelDelete">
            <text class="button-text">Cancel</text>
          </view>
          <view class="button primary delete" bindtap="confirmDelete">
            <text class="button-text">Delete</text>
          </view>
        </view>
      </view>
    </view>
  </view>
  
  <!-- åº•éƒ¨å·¥å…·æ ?-->
</view>

