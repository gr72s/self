<view class="page-container">
  <!-- 顶部导航栏-->
  
  <!-- 主内容区 -->
  <view class="main-container">
    <!-- 页面头部 -->
    <view class="section-title">
      <text>动作库</text>
      <view class="toolbar-right">
        <view class="button icon-button" bindtap="handleRefresh">
          <text>🔄</text>
        </view>
        <view class="button primary" bindtap="navigateToCreate">
          <text class="button-text">+ 新建</text>
        </view>
      </view>
    </view>

    <!-- 动作列表 -->
    <view class="table">
      <block wx:if="{{loading}}">
        <view class="loading">
          <view class="loading-spinner"></view>
          <text>加载中...</text>
        </view>
      </block>
      <block wx:elif="{{exercises.length === 0}}">
        <view class="empty">
          <text class="empty-icon">💪</text>
          <text class="empty-text">暂无动作</text>
          <text class="empty-subtext">创建第一个动作开始使用</text>
          <view class="button primary" bindtap="navigateToCreate">
            <text class="button-text">新建首个动作</text>
          </view>
        </view>
      </block>
      <block wx:else>
        <view class="table-header">
          <view class="table-header-cell">动作</view>
          <view class="table-header-cell">肌肉</view>
          <view class="table-header-cell">描述</view>
          <view class="table-header-cell" style="text-align: right;">操作</view>
        </view>
        <view class="table-body">
          <view wx:for="{{exercises}}" wx:key="id" class="table-row">
            <view class="table-cell">
              <text class="exercise-name">{{item.name}}</text>
            </view>
            <view class="table-cell">
              <text class="exercise-muscles">{{getMusclesList(item)}}</text>
            </view>
            <view class="table-cell">
              <text class="exercise-description">{{item.description || '暂无描述'}}</text>
            </view>
            <view class="table-cell" style="text-align: right;">
              <view class="table-actions">
                <view class="button icon-button" bindtap="navigateToEdit" data-id="{{item.id}}">
                  <text>✏️</text>
                </view>
                <view class="button icon-button delete" bindtap="confirmDelete" data-id="{{item.id}}">
                  <text>🗑️</text>
                </view>
              </view>
            </view>
          </view>
        </view>
      </block>
    </view>
  </view>
  
  <!-- 底部工具栏-->
</view>

